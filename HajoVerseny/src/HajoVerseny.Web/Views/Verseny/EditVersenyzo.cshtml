@model HajoVerseny.Models.Versenyzo

<form class="form-horizontal">
   <div class="form-group">
      <label class="col-sm-2 control-label">Név</label>
      <div class="col-sm-10">
         @Html.TextBoxFor(m => m.Nev, new { @class = "form-control" })
      </div>
   </div>
   <div class="form-group">
      <label class="col-sm-2 control-label">Nem</label>
      <div class="col-sm-10">
         @Html.DropDownListFor(m => m.Nem, Html.GetEnumSelectList(typeof(Nem)), new { @class = "form-control" })
      </div>
   </div>
   <div class="form-group">
      <label class="col-sm-2 control-label">Születési dátum</label>
      <div class="col-sm-10">
         @Html.TextBoxFor(m => m.SzuletesiDatum, new { @class = "form-control" })
      </div>
   </div>
</form>